<Window x:Class="BTimeLogger.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTimeLogger.Wpf"
        xmlns:view="clr-namespace:BTimeLogger.Wpf.View"
        xmlns:mainwindow="clr-namespace:BTimeLogger.Wpf.View.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow"
        MinHeight="450"
        MinWidth="800"
        Height="800"
        Width="1200"
        WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>
    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MainWindow}}}"
          Background="{StaticResource skinBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--Title Bar-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--TODO: behavior-->
            <mainwindow:TitleBarMenu ViewModel="{Binding ViewModel.TitleBarMenuViewModel}"
                Grid.Column="0"
                                     VerticalAlignment="Center"
                                     Visibility="Visible" />


            <TextBlock Grid.Column="1"
                       Margin="4 0 0 0"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Text="{StaticResource appTitle}">
            </TextBlock>
            <view:WindowButtons Grid.Column="2"
                                ViewModel="{Binding ViewModel.WindowButtonsViewModel}" />

        </Grid>
        <view:MainLayout ViewModel="{Binding ViewModel.MainLayoutViewModel}"
                         Grid.Row="1" />
    </Grid>

</Window>
