<UserControl x:Class="BTimeLogger.Wpf.View.IntervalList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTimeLogger.Wpf.View"
             xmlns:viewmodel="clr-namespace:BTimeLogger.Wpf.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:IntervalList}}}"
            Style="{StaticResource ListViewBorderStyle}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListView ItemsSource="{Binding ViewModel.Items, Mode=OneWay}"
                      Grid.Row="0"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      VerticalAlignment="Top"
                      Name="listView">
                
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type  viewmodel:IntervalListItemViewModel}">
                        <local:IntervalListItem ViewModel="{Binding }" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Vertical"
                        Grid.Row="1">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}"
                           BasedOn="{StaticResource TextBlockStyle}">
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                        <Setter Property="Margin"
                                Value="0 10" />
                        <Setter Property="FontSize"
                                Value="20" />
                    </Style>
                </StackPanel.Resources>
                <TextBlock Visibility="{Binding ViewModel.Loading, Converter={StaticResource boolToVis}}"
                           Text="{StaticResource loading}" />
                <TextBlock Visibility="{Binding ViewModel.IsEmpty, Converter={StaticResource boolToVis}}"
                           Text="{StaticResource noActivitiesInRange}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
